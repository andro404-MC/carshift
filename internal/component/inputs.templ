package component

templ InputFirstName(v string, haveIco bool) {
	<div>
		<label class="w-full input validator">
			if haveIco {
				@Icon("id")
			}
			<input
				type="text"
				value={ v }
				placeholder="First name"
				name="firstname"
				minlength="2"
				required
			/>
		</label>
	</div>
}

